<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.lab.controllers.ModifyTestFormController" spacing="20" alignment="CENTER">

    <Label text="Modify Test"/>
    <TextField fx:id="testNameField"/>
    <TextField fx:id="testUnitField"/>
    <TextField fx:id="testPriceField"/>
    <TextField fx:id="testMinValueField"/>
    <TextField fx:id="testMaxValueField"/>
    <TextArea fx:id="testDescriptionField"/>

    <Button text="Save Changes" onAction="#handleSaveChanges"/>
    <Button text="Cancel" onAction="#handleCancel"/>
</VBox>
